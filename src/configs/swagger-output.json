      "post": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para registrar un usuario.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Datos del usuario para registro",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "usuario@correo.com"
                },
                "password": {
                  "type": "number",
                  "example": 123456
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/session/": {
      "post": {
        "tags": [
          "Session"
        ],
        "description": "Endpoint para iniciar sesión.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Datos del usuario para iniciar sesión",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "usuario@correo.com"
                },
                "password": {
                  "type": "number",
