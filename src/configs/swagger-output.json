    },
    "/api/invitation/send/": {
      "post": {
        "tags": [
          "Invitation"
        ],
        "description": "Endpoint para enviar una invitación a un proyecto por correo.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "any"
                },
                "projectId": {
                  "example": "any"
